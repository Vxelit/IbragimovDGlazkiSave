<Window x:Class="IbragimovDGlazkiSave.AgentPriorityChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IbragimovDGlazkiSave"
        mc:Ignorable="d"
        Title="Введите приоритет" Height="200" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock Grid.Row="1" Text="Введите приоритет:" HorizontalAlignment="Center" FontSize="20"></TextBlock>
            <TextBox Grid.Row="1" HorizontalAlignment="Center" Width="170" Height="20" Name="PriorityTextBox"/>
            <Button Grid.Row="1" HorizontalAlignment="Center" Height="24" Click="Button_Click" Content="Изменить"></Button>
        </WrapPanel>
    </Grid>
</Window>
